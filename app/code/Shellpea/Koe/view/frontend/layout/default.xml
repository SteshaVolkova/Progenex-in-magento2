<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.links">
            <block class="Shellpea\Koe\Block\Link" name="custom-header-link" after="my-account-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Some page</argument>
                    <argument name="path" xsi:type="string" translate="true">koe</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceContainer name="content.top">
            <block class="Shellpea\Koe\Block\Display" name="koe_display" template="Shellpea_Koe::saykoe.phtml" />
        </referenceContainer>
    </body>    
</page>
